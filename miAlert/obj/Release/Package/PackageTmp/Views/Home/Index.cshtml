@using miAlert.Models.Home
@model miAlert.Models.Home.RssFeedViewModel


<div style="width: 100%; height: 700px;" id="pageContainer">
    <div id="rssFeed" class="rssFeed pageContainer left">@Html.Partial("_RSSFeed",Model)</div>
    <div class="pageContainer right">@Html.Partial("_ArticlePreview")</div>
</div>

<script type="text/javascript">

    setWindowsSize = function() {
        $('#pageContainer').height(window.innerHeight - 80);
    };
    
    window.onresize = function (event) {
        setWindowsSize();
    };

    window.onload = function(event) {
        setWindowsSize();
    };

</script>